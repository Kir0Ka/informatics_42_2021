using namespace std;

void alg(int n)
{
    int two = 0;
    int eight = 0;
    int sixteen = 0;
    int a = n;
    int b = n;
    for(int i = 0; n>0; i++)
    {
        two += (n % 2) * pow(10, i);
        n=n/2;
    }

    for(int i = 0; a>0; i++)
    {
        eight += (a % 8) * pow(10, i);
        a=a/8;
    }

    for(int i = 0; b>0; i++)
    {
        sixteen += (b % 16) * pow(10, i);
        b=b/16;
    }
    cout<<"Number System 2 = " << two << endl;
    cout<<"Number System 8 = "  << eight << endl;
    cout<<"Number System 16 = "  << sixteen << endl;
}

int main()
{   
    int n;
    cin >> n;
    while(n<0 || n>325)
    {
        cout << "Write correct number: ";
        cin >> n;
    } 
    
    alg(n);

}

